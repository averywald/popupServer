{
  "name": "webgate",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "lint": "npx eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "clean": "rm -rf ./dist",
    "copy:stylesheets": "cp -R ./src/public/styles/ ./dist/public/styles",
    "copy:views": "cp -R ./src/public/views/ ./dist/public/views",
    "build": "npm run clean && tsc && npm run copy:stylesheets && npm run copy:views",
    "dev": "nodemon ./src/server.ts",
    "prestart": "npm run build",
    "start": "node ./dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Avery Wald <averywald.dev@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/express-serve-static-core": "^4.17.30",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.20",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "babel-eslint": "^10.1.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.2",
    "eslint": "^8.24.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "express": "^4.18.1",
    "mongoose": "^6.6.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
